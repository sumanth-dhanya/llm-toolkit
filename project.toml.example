[project]
name = "package-here"
version = "1.0.0"
description = "An advanced Python package example"
readme = "README.md"
authors = [{ name = "Your Name", email = "sumanthdhany@gmail.com" }]
requires-python = ">=3.12"

dependencies = [
    "pyyaml==6.0.1",
    "requests==2.31.0",
    "yamllint==1.35.0",
    "typing_extensions==4.12.2",
    "pytz==2025.1"
]

[build-system]
requires = ["setuptools>=68.0", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
where = ["src"]
include = ["package_here*"]

[tool.ruff]
line-length = 88
target-version = "py312"
select = ["E", "F", "I", "B"]
ignore = ["F401", "E722"]
fix = true

[tool.ruff.format]
quote-style = "double"
indent-style = "space"
docstring-code-format = true
docstring-code-line-length = 88
